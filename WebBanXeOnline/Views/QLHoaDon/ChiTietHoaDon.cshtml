
@{
    ViewBag.Title = "ChiTietHoaDon";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
    WebBanXeOnlineEntities db = new WebBanXeOnlineEntities();
    int mahd = (int)ViewBag.mahd;
}

@using System.Web.UI.WebControls
@using WebBanXeOnline.Models
@model List<WebBanXeOnline.Models.ChiTietHoaDon>
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<div class="page-header">
    <h1>
        <a href="/QLHoaDon/Index" class="btn btn-outline btn-primary">Quay lại</a>
        @if (db.HoaDon.SingleOrDefault(x => x.MaHoaDon == mahd).TrangThai == false)
        {
            <a href="/QLHoaDon/DuyetHD/@ViewBag.mahd" class="btn btn-outline btn-primary">Duyệt</a>
        }
        <a href="/QLHoaDon/SuaHD/@ViewBag.mahd" class="btn btn-outline btn-primary">Sửa</a>
    </h1>

</div>

<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Tổng tiền</th>
                <th>Chỉnh sửa</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {

                if (i % 2 == 0)
                {
                    <tr class="even gradeA">
                        <td>@Model[i].ChiTietHoaDon1</td>
                        <td>@Model[i].SanPham.TenSP</td>
                        <td>@Model[i].SoLuong</td>
                        <td>@double.Parse(@Model[i].TongTien.ToString()).ToString("##,###") VNĐ</td>
                        <td><a data-id1="@Model[i].ChiTietHoaDon1" data-amount="@db.SanPham.Find(Model[i].MaSP).SoLuong" class="editCTHD btn btn-warning">Sửa</a>||<a data-id="@Model[i].ChiTietHoaDon1" class="xoaChiTietHD btn btn-danger">Xóa</a></td>

                    </tr>
                }
                else
                {
                    <tr class="odd gradeA">
                        <td>@Model[i].ChiTietHoaDon1</td>
                        <td>@Model[i].SanPham.TenSP</td>
                        <td>@Model[i].SoLuong</td>
                        <td>@double.Parse(@Model[i].TongTien.ToString()).ToString("##,###") VNĐ</td>
                        <td><a data-id1="@Model[i].ChiTietHoaDon1" data-amount="@db.SanPham.Find(Model[i].MaSP).SoLuong" class="editCTHD btn btn-warning">Sửa</a>||<a data-id="@Model[i].ChiTietHoaDon1" class="xoaChiTietHD btn btn-danger">Xóa</a></td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/admin.js"></script>
<script src="~/Scripts/sb-admin-2.js"></script>


