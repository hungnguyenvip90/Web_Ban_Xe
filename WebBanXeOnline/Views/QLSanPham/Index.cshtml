
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
    WebBanXeOnlineEntities db = new WebBanXeOnlineEntities();
}
@using WebBanXeOnline.Models;
@model List<WebBanXeOnline.Models.SanPham>
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<a href="/QLSanPham/ThemSanPham" class="btn btn-success">Thêm</a>
<h4 class="card-title">Danh sách Sản Phẩm</h4>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                @*<th>Mã SP</th>*@
                <th>Tên sản phẩm</th>
                @*<th>Mã NCC</th>*@
                <th>Mã Loai</th>

                <th>Giá nhập</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Giá bán</th>
                <th>Mã khuyến mãi</th>
                <th>Ngày đăng</th>
                <th>Chỉnh sửa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@item.MaSP</td>*@
                    <td>@item.TenSP</td>
                    @*<td>@db.NhaCungCap.Find(item.MaNCC).TenNCC</td>*@
                    <td>@db.LoaiSP.Find(item.MaLoai).TenLoaiSP</td>

                    <td>@item.GiaNhap</td>
                    <td><img src="@item.Anh" style="width:50px; height:50px;" /></td>
                    <td>@item.SoLuong</td>
                    <td>@item.GiaBan</td>
                    <td>@db.KhuyenMai.Find(item.MaKM).NoiDung</td>
                    <td>@Html.FormatValue(item.NgayDang, "{0:dd/MM/yyyy}")</td>
                    <td><a href="/QLSanPham/SuaSanPham/@item.MaSP" class="btn btn-warning">Sửa</a>||<a data-id="@item.MaSP" class="xoaSanPham btn btn-danger">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/admin.js"></script>
